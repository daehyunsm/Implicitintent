<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="전화 걸기"
        android:textSize="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="전화 다이얼"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCall"
        tools:layout_editor_absoluteX="166dp" />

    <Button
        android:id="@+id/btnSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="문자 보내기"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDial"
        tools:layout_editor_absoluteX="197dp" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="지도 보기"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSms"
        tools:layout_editor_absoluteX="116dp" />

    <Button
        android:id="@+id/btnWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="웹브라우저"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnMap"
        tools:layout_editor_absoluteX="167dp" />

    <Button
        android:id="@+id/btnContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="연락처 보기"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnWeb"
        tools:layout_editor_absoluteX="154dp" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="사진 찍기"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnContact"
        tools:layout_editor_absoluteX="161dp" />

    <ImageView
        android:id="@+id/iVCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCamera"
        app:srcCompat="@drawable/ic_launcher_background" />


</androidx.constraintlayout.widget.ConstraintLayout>